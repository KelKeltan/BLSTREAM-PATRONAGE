<Page
    x:Class="BLSTREAM_PATRONAGE.AddPlacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BLSTREAM_PATRONAGE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    FontSize="16"
    Margin="5,30,0,0"
    Foreground="LightGray">
 
    <Grid
        x:Name="LayoutRoot"> 
        
        <StackPanel>
            
            <TextBlock
        Text="Name"/>

            <TextBox
        x:Name="Name"
        Text="{Binding Path=Name,Mode=TwoWay}"/>
            
            <TextBlock
        Text="Address"/>
            
            <TextBox
        x:Name="Address"
        Text="{Binding Path=Address,Mode=TwoWay}"/>
             
            <TextBlock
        Text="Lat:"/>

            <TextBox
        x:Name="Lattitude" 
        Text="{Binding Path=Lattitude,Mode=TwoWay}"/>

            <TextBlock
        Text="Lon:"/>

            <TextBox
        x:Name="Longitude"
        Text="{Binding Path=Longitude,Mode=TwoWay}"/>
            
            <CheckBox>                
                Has Wifi
            </CheckBox>
            
            <Button x:Name="LocationButton" Click="Location_Click" Content="get GPS Lat/Lon"/>
      
        </StackPanel>
    </Grid>
</Page>
